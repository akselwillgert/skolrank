<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/kommun_shield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_kommun_stockholm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/skolnamn"
            style="@style/marker_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/black"
            tools:text="Abc 123 Skolan" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <se.subsurface.skolrank.GoneTextView
                android:id="@+id/avg_grade"
                style="@style/marker_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                tools:text="258p." />


            <se.subsurface.skolrank.GoneTextView
                android:id="@+id/educated_parents"
                style="@style/marker_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:textColor="@color/skolrank_blue"
                tools:text="70%" />

            <se.subsurface.skolrank.GoneTextView
                android:id="@+id/foreign"
                style="@style/marker_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/skolrank_red"
                tools:text="20%"

                />

            <se.subsurface.skolrank.GoneTextView
                android:id="@+id/girls"
                style="@style/marker_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/skolrank_pink"
                tools:text="50%" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>